# Application Settings
APP_NAME=Universal Agentic Fabric
APP_VERSION=2.0.0
DEBUG=false

# Graph Database
GRAPH_DB_TYPE=neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Amazon Neptune (alternative)
# NEPTUNE_ENDPOINT=your-neptune-endpoint.cluster-xxxxx.us-east-1.neptune.amazonaws.com
# NEPTUNE_PORT=8182

# Message Queue
MESSAGE_QUEUE_TYPE=kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# NATS_URL=nats://localhost:4222

# Secrets Management
VAULT_TYPE=vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token

# AWS Secrets Manager (alternative)
# AWS_REGION=us-east-1

# Azure Key Vault (alternative)
# AZURE_KEYVAULT_URL=https://your-vault.vault.azure.net/

# Performance Settings
DEFAULT_POLLING_INTERVAL=300
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# SLA Settings
TRIAGE_SLA_SECONDS=300

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

